<div class="container mx-auto px-4 py-8 max-w-4xl">
  <!-- Header Section -->
  <div class="flex items-center space-x-4 mb-8">
    <%= link_to contents_path, class: "inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 h-9 w-9", style: "border: 1px solid #E2E8F0; background-color: transparent; color: #1A202C; --tw-ring-color: #0052CC;" do %>
      <%= icon('arrow-left', class: 'h-4 w-4') %>
    <% end %>
    
    <div class="flex-1">
      <div class="flex items-center justify-between">
        <div class="space-y-1">
          <h1 class="text-3xl font-bold tracking-tight" style="color: #1A202C;">
            <%= @content.title %>
          </h1>
          <div class="flex items-center space-x-4 text-sm" style="color: #718096;">
            <div class="flex items-center space-x-1">
              <%= icon('user', class: 'h-4 w-4') %>
              <span><%= @content.user.present? ? "User ##{@content.user.id}" : "Unknown Author" %></span>
            </div>
            <span>•</span>
            <div class="flex items-center space-x-1">
              <%= icon('clock', class: 'h-4 w-4') %>
              <time datetime="<%= @content.created_at.iso8601 %>">
                <%= @content.created_at.strftime("%B %d, %Y") %>
              </time>
            </div>
            <span>•</span>
            <div class="flex items-center space-x-1">
              <% case @content.content_type %>
              <% when "video" %>
                <%= icon('video', class: 'h-4 w-4') %>
                <span>Video</span>
              <% when "newsletter" %>
                <%= icon('mail', class: 'h-4 w-4') %>
                <span>Newsletter</span>
              <% when "column" %>
                <%= icon('article', class: 'h-4 w-4') %>
                <span>Column</span>
              <% else %>
                <%= icon('file-text', class: 'h-4 w-4') %>
                <span>Content</span>
              <% end %>
            </div>
          </div>
        </div>
        
        <div class="flex items-center space-x-2">
          <%= link_to edit_content_path(@content), 
              class: "inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border h-10 px-4 py-2",
              style: "border-color: #E2E8F0; background-color: transparent; color: #1A202C; --tw-ring-color: #0052CC;" do %>
            <%= icon('edit', class: 'h-4 w-4 mr-2') %>
            수정
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Tags Section -->
  <% if @content.tags.any? %>
    <div class="flex flex-wrap gap-2 mb-8">
      <% @content.tags.each do |tag| %>
        <span class="inline-flex items-center rounded-full px-3 py-1 text-sm font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2" style="background-color: #1EC7A6; color: #FFFFFF; --tw-ring-color: #1EC7A6;">
          <%= tag.name %>
        </span>
      <% end %>
    </div>
  <% end %>

  <!-- External Link Section -->
  <% if @content.link.present? %>
    <div class="rounded-lg border p-4 mb-8" style="border-color: #E2E8F0; background-color: #F5F7FA;">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <%= icon('external-link', class: 'h-5 w-5', style: 'color: #0052CC;') %>
          <div>
            <p class="text-sm font-medium" style="color: #1A202C;">원본 링크</p>
            <p class="text-xs" style="color: #718096;">외부 콘텐츠로 이동합니다</p>
          </div>
        </div>
        <%= link_to @content.link, 
            target: "_blank", 
            rel: "noopener noreferrer",
            class: "inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 h-10 px-4 py-2",
            style: "background-color: #0052CC; color: #FFFFFF; --tw-ring-color: #0052CC;" do %>
          <%= icon('arrow-up-right', class: 'h-4 w-4 mr-2') %>
          바로가기
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Content Body -->
  <div class="prose prose-lg max-w-none">
    <div class="rounded-lg border p-8" style="border-color: #E2E8F0; background-color: #FFFFFF;">
      <div class="text-base leading-7" style="color: #1A202C; line-height: 1.7;">
        <%= simple_format(@content.body, {}, { wrapper_tag: "div" }) %>
      </div>
    </div>
  </div>

  <!-- Actions Section -->
  <div class="flex items-center justify-between mt-12 pt-8 border-t" style="border-color: #E2E8F0;">
    <div class="flex items-center space-x-4">
      <!-- Like/Bookmark Actions (Future Implementation) -->
      <button class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border h-10 px-4 py-2" style="border-color: #E2E8F0; background-color: transparent; color: #1A202C; --tw-ring-color: #0052CC;">
        <%= icon('heart', class: 'h-4 w-4 mr-2') %>
        좋아요
      </button>
      
      <button class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border h-10 px-4 py-2" style="border-color: #E2E8F0; background-color: transparent; color: #1A202C; --tw-ring-color: #0052CC;">
        <%= icon('bookmark', class: 'h-4 w-4 mr-2') %>
        북마크
      </button>
      
      <button class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border h-10 px-4 py-2" style="border-color: #E2E8F0; background-color: transparent; color: #1A202C; --tw-ring-color: #0052CC;">
        <%= icon('share', class: 'h-4 w-4 mr-2') %>
        공유
      </button>
    </div>
    
    <div class="text-sm" style="color: #718096;">
      <div class="flex items-center space-x-4">
        <span>
          작성일: <%= @content.created_at.strftime("%Y년 %m월 %d일") %>
        </span>
        <% if @content.updated_at != @content.created_at %>
          <span>
            수정일: <%= @content.updated_at.strftime("%Y년 %m월 %d일") %>
          </span>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Related Content Section (Placeholder) -->
  <% if @content.tags.any? %>
    <div class="mt-12">
      <h3 class="text-xl font-bold tracking-tight mb-6" style="color: #1A202C;">
        관련 콘텐츠
      </h3>
      <div class="rounded-lg border p-8 text-center" style="border-color: #E2E8F0; background-color: #F5F7FA;">
        <%= icon('search', class: 'mx-auto h-8 w-8 mb-3', style: 'color: #718096;') %>
        <p class="text-sm" style="color: #718096;">
          비슷한 태그를 가진 콘텐츠가 준비되면 여기에 표시됩니다.
        </p>
      </div>
    </div>
  <% end %>
</div>