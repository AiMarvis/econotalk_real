<header class="sticky top-0 z-50 w-full border-b border-gray-200 bg-white/95 backdrop-blur supports-[backdrop-filter]:bg-white/60" style="border-color: #E2E8F0;">
  <div class="container mx-auto flex h-14 max-w-screen-2xl items-center px-4 sm:px-6 lg:px-8">
    <!-- Logo / Brand -->
    <div class="mr-4 flex">
      <%= link_to root_path, class: "mr-6 flex items-center space-x-2" do %>
        <%= icon('chart-line', class: 'h-6 w-6', style: 'color: #0052CC') %>
        <span class="hidden font-bold sm:inline-block text-lg" style="color: #1A202C;">EconoTalk</span>
      <% end %>
    </div>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center space-x-6 text-sm font-medium">
      <%= link_to "홈", root_path, class: "transition-colors hover:opacity-80", style: "color: #718096;" %>
      <%= link_to "피드", feed_path, class: "transition-colors hover:opacity-80", style: "color: #718096;" %>
      <%= link_to "채팅", chat_path, class: "transition-colors hover:opacity-80", style: "color: #718096;" %>
      <%= link_to "북마크", bookmarks_path, class: "transition-colors hover:opacity-80", style: "color: #718096;" %>
    </nav>

    <!-- Search Bar (Desktop) -->
    <div class="hidden md:flex flex-1 items-center justify-center px-6">
      <div class="w-full max-w-sm">
        <div class="relative">
          <%= icon('search', class: 'absolute left-2.5 top-2.5 h-4 w-4', style: 'color: #718096;') %>
          <input 
            type="search" 
            placeholder="경제 콘텐츠 검색..." 
            class="w-full rounded-md border px-8 py-2 text-sm placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
            style="border-color: #E2E8F0; background-color: #FFFFFF; color: #1A202C; --tw-ring-color: #0052CC;"
          />
        </div>
      </div>
    </div>

    <!-- Right Side Actions -->
    <div class="flex flex-1 items-center justify-end space-x-2">
      <!-- Search Button (Mobile) -->
      <button class="md:hidden inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 hover:bg-gray-100 h-9 w-9" style="--tw-ring-color: #0052CC; background-color: transparent;">
        <%= icon('search', class: 'h-4 w-4', style: 'color: #718096;') %>
      </button>

      <!-- Theme Toggle -->
      <button class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 hover:bg-gray-100 h-9 w-9" style="--tw-ring-color: #0052CC; background-color: transparent;">
        <%= icon('sun', class: 'h-4 w-4', style: 'color: #718096;') %>
      </button>

      <!-- User Menu -->
      <div class="relative">
        <button class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 hover:bg-gray-100 h-9 w-9" style="--tw-ring-color: #0052CC; background-color: transparent;">
          <%= icon('user', class: 'h-4 w-4', style: 'color: #718096;') %>
        </button>
      </div>

      <!-- Mobile Menu Button -->
      <button class="md:hidden inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 hover:bg-gray-100 h-9 w-9" style="--tw-ring-color: #0052CC; background-color: transparent;">
        <%= icon('menu-2', class: 'h-4 w-4', style: 'color: #718096;') %>
      </button>
    </div>
  </div>

  <!-- Mobile Navigation (Hidden by default) -->
  <div class="md:hidden border-t bg-white/95 backdrop-blur supports-[backdrop-filter]:bg-white/60 hidden" id="mobile-menu" style="border-color: #E2E8F0;">
    <div class="container mx-auto px-4 py-2">
      <!-- Mobile Search -->
      <div class="mb-4">
        <div class="relative">
          <%= icon('search', class: 'absolute left-2.5 top-2.5 h-4 w-4', style: 'color: #718096;') %>
          <input 
            type="search" 
            placeholder="경제 콘텐츠 검색..." 
            class="w-full rounded-md border px-8 py-2 text-sm placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
            style="border-color: #E2E8F0; background-color: #FFFFFF; color: #1A202C; --tw-ring-color: #0052CC;"
          />
        </div>
      </div>
      
      <!-- Mobile Navigation Links -->
      <nav class="flex flex-col space-y-2">
        <%= link_to "홈", root_path, class: "flex items-center px-2 py-2 text-sm font-medium transition-colors hover:bg-gray-100 rounded-md", style: "color: #718096;" %>
        <%= link_to "피드", feed_path, class: "flex items-center px-2 py-2 text-sm font-medium transition-colors hover:bg-gray-100 rounded-md", style: "color: #718096;" %>
        <%= link_to "채팅", chat_path, class: "flex items-center px-2 py-2 text-sm font-medium transition-colors hover:bg-gray-100 rounded-md", style: "color: #718096;" %>
        <%= link_to "북마크", bookmarks_path, class: "flex items-center px-2 py-2 text-sm font-medium transition-colors hover:bg-gray-100 rounded-md", style: "color: #718096;" %>
      </nav>
    </div>
  </div>
</header>